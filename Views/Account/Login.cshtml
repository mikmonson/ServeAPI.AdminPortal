@model AdminPortal.Models.Auth.LoginModel
@{
    ViewData["Title"] = "Login to the Admin Portal";
    Layout = null;
    if (ViewData["redirect"] == null) ViewData["redirect"] = "";
    //Model.redirect = ViewData["redirect"].ToString();
}

<h2>Welcome to the Admin Portal</h2>
<br>
<h4>Please enter your credentials</h4>
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login">Enter username</label>
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div style="display: none;">
            @Html.TextArea("redirect", @ViewData["redirect"].ToString(), new { @class = "form-control" })
        </div>
        <br>
        <p style="color:red"><b>@ViewData["error"]</b></p>
        <br>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn" />
        </div>



    </div>
</form>